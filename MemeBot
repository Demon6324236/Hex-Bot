  fun main(args: Array<String>) {
      var a = 1
      // simple name in template:
      val s1 = "a is $a" 

      a = 2
      // arbitrary expression in template:
      val s2 = "${s1.replace("is", "was")}, but now is $a"
      println(s2)
  } 
  
input
  val myInt = 5;
    val myString = "myInt = $myInt"    makes it say "myint = (value of myint)

    println(myString)
  output
    myInt = 5
